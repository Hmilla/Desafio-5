extends ./layouts/main.pug
block content 

    a(type="button" href="/productos/create" class="btn btn-primary btn-lg m-2 p-2") Crear Producto

    if products.length
    

      table(class="table table-dark")
        thead
          tr(class="text-center")
            th(scope="col") id
            th(scope="col") Title
            th(scope="col") Price
            th(scope="col") thumbnail
        tbody
            each product in products
              tr(class="text-center")
                th(scope="row")=product.id
                td=product.title
                td=product.price

                td
                  img(height="75px" width="120px")&attributes({src: product.thumbnail, alt: product.title})

    else
        p No hay productos creados



